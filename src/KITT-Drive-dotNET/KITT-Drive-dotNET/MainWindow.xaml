<Window x:Class="KITT_Drive_dotNET.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="500" KeyDown="Window_KeyDown">
	<Grid>

		<GroupBox Header="Vehicle controls" HorizontalAlignment="Left" Margin="10,10,0,10" VerticalAlignment="Stretch" Width="230">
			<Grid>
				<Button Name="Button_ThrottleUp" Content="Up" HorizontalAlignment="Center" Margin="0,0,0,125" VerticalAlignment="Center" Width="50" Height="50" Click="Button_ThrottleUp_Click"/>
				<Button Name="Button_ThrottleDown" Content="Down" HorizontalAlignment="Center" Margin="0,0,0,0" VerticalAlignment="Center" Width="50" Height="50" Click="Button_ThrottleDown_Click"/>
				<Button Name="Button_SteerLeft" Content="Left" HorizontalAlignment="Center" Margin="0,0,125,0" VerticalAlignment="Center" Width="50" Height="50" Click="Button_SteerLeft_Click"/>
				<Button Name="Button_SteerRight" Content="Right" HorizontalAlignment="Center" Margin="125,0,0,0" VerticalAlignment="Center" Width="50" Height="50" Click="Button_SteerRight_Click"/>
				<ComboBox Name="ComboBox_COM" HorizontalAlignment="Left" Margin="10,0,0,10" VerticalAlignment="Bottom" Width="120" DropDownOpened="ComboBox_COM_DropDownOpened">
					<ComboBoxItem Content="COM-port..." IsSelected="true"/>
				</ComboBox>
				<Button Name="Button_Connect" Content="Connect" HorizontalAlignment="Right" Margin="0,0,10,10" VerticalAlignment="Bottom" Width="70" Height="22" Click="Button_Connect_Click"/>
					

			</Grid>
		</GroupBox>
		<GroupBox Header="Vehicle status" HorizontalAlignment="Right" Margin="0,10,10,10" VerticalAlignment="Stretch" Width="230">
			<Grid>

			</Grid>
		</GroupBox>

	</Grid>
</Window>
